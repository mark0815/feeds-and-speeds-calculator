    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000",
                "--noreload"
            ],
            "django": true,
            "serverReadyAction":{
                "pattern": "https?:\\/\\/\\S+:([0-9]+)\\/?\\nQuit the server with CONTROL-C\\.",
                "uriFormat": "http://localhost:%s/admin/",
                "action": "openExternally"
            }
        }
    ]
}